$(function(){
	$("#save_btn").bind("click", Role.saveData);
});
var Role={
	//弹出编辑对话框
	showEdit : function(roleId){
		//弹框方式
		$(".formError").remove();
		if(!roleId){//新增
			this.clearData();
		}
		else{//修改
			this.fillData(roleId);
		}
		$('#editModal').modal({keyboard: false});
		//页面跳转方式
		//if(!roleId) roleId = "";
		//document.location.href = ctx + "/role/editRole?roleId="+roleId;
	},	
	//清除弹出框数据
	clearData : function(){
		$("#editForm select").each(function() {
			$(this).find("option:first").prop("selected", 'selected');
		})
		$("#editForm input").each(function() {
			$(this).val("");
		})
	},
	//填充弹出框数据
	fillData : function(roleId){
		this.getData(roleId, function(data){
			for (dataAttr in data)  
			  {  
			   	 if($("#editForm [name="+dataAttr+"]")){
			   		$("#editForm [name="+dataAttr+"]").val(data[dataAttr]);
			   	 }
			  } 
		});
	},
	//保存数据
	saveData : function(){
		if(!$("form#editForm").validationEngine("validate")) return ;  
		$.ajax({
    		url: ctx+"/admin/role/saveRole",
    		type: "POST",
    		async: true,
    		data: $("#editForm").serialize(),
    		success: function(data){
    			if(data.errorCode =="000000"){
    				Dialog.showSuccess("保存成功");
    				document.location.reload();
    				//document.location.href = ctx + "/role/roleList";
    			}
    			else{
    				Dialog.showError(data.errorMessage);
    			}
    		},
    		error: function(){
    		}
    	});
	},	
	//获取数据
	getData : function(roleId, callback){
		$.ajax({
    		url: ctx+"/admin/role/findRole",
    		type: "POST",
    		async: true,
    		data: {"roleId" : roleId},
    		success: function(data){
    			if(data.errorCode =="000000"){
    				callback(data.data);
    				return;
    			}
    			else{
    				Dialog.showError(data.errorMessage);
    			}
    		},
    		error: function(){
    		}
    	});
	},
	//删除数据
	deleteData : function (roleId, delFlag) {
		$.ajax({
    		url: ctx+"/admin/role/deleteRole",
    		type: "POST",
    		async: true,
    		data: {"roleId" : roleId},
    		success: function(data){
    			if(data.errorCode =="000000"){
    				Dialog.showSuccess("操作成功");
    				document.location.reload();
    			}
    			else{
    				Dialog.showError(data.errorMessage);
    			}
    		},
    		error: function(){
    		}
    	});
	}
}